@model WebsiteBuilder.Models.Customization
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@using Microsoft.AspNetCore.Identity
@{
    ViewData["Title"] = "Create";

    Layout = "~/Views/Shared/_WebsiteCreateLayout.cshtml";

}





<form asp-action="Create" method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <label>Theme Color</label>
    <input asp-for="ThemeColor" type="color" class="form-control" />

    <label>heading Color</label>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input asp-for="headingColor" type="color" class="form-control" />


    <label>Meta Description</label>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input asp-for="SubheadingColor" type="color" class="form-control" />

    <label>Text Color</label>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input asp-for="TextColor" type="color" class="form-control" />

  


    <label>Primary BgColor</label>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input asp-for="PrimaryBgColor" type="color" class="form-control" />




    <label>Secondry BgColor</label>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input asp-for="SecondryBgColor" type="color" class="form-control" />

   

    <input type="submit" value="Create" style="background-color: #FEB800;border:none;" class="btn btn-primary btn-block btn-lg" />
</form>