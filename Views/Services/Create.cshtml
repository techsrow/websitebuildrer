@model WebsiteBuilder.Models.Service
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@using Microsoft.AspNetCore.Identity
@{
    ViewData["Title"] = "Create";

    Layout = "~/Views/Shared/_WebsiteCreateLayout.cshtml";

}
<form asp-action="Create" method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <label>NAME</label>
    <input asp-for="ServiceName" class="form-control" />

    <label>Short Desc</label>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input asp-for="ServiceDescription" class="form-control" />


    <label>Long Desc</label>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input asp-for="ServiceShortDesc" class="form-control" />


    <label>Image</label>

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input name="imageFile" type="file" class="form-control" />

    <input type="submit" value="Create" style="background-color: #FEB800;border:none;" class="btn btn-primary btn-block btn-lg" />
</form>